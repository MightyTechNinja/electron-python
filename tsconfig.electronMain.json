{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",

    "baseUrl": ".",
    "module": "commonjs",
    "outDir": "buildMain",
    "paths": {
      "*": ["node_modules/*"]
    },
    "sourceMap": true
  },
  "include": [
    "main",
  ],
}